<style>

body {
	height: calc(100vh - 56px);
}

body > * {
	width: 60vw;
}

body > header {
	height: 64px;
	justify-content: space-around;
/*		background-color: rgba(128, 128, 128, 0.25);*/
}

.bans, .prev-match {
	gap: 8px;
}

.bans .frame, .prev-match .frame {
	position: relative;
	width: 32px;
	aspect-ratio: 1 / 1;
	border-radius: 4px;
}

.bans img, .prev-match img {
	filter: contrast(110%) grayscale(100%);
	width: 100%;
	border-radius: 4px;
}

.blue .frame { background-color: rgba(83, 131, 232, 0.3); }
.red .frame { background-color: rgba(232, 64, 87, 0.3); }

/*.bans > .frame::after {
    content: "";
    position: absolute;
    top: -10%;
    left: -10%;
    width: 120%;
    height: 120%;
    background-image: url("/assets/icons/svgs/ban.svg");
    background-repeat: no-repeat;
    background-position: top 0% left 0%;
    background-size: cover;
}*/
.bans.blue .frame { border: 1px solid var(--win-blue100); }
.bans.red .frame { border: 1px solid var(--loss-red100); }
.blue { color: var(--win-blue100); }
.red { color: var(--loss-red100); }




body > div.row {
	border-radius: 4px;
	position: relative;
	height: 116px;
	gap: 32px;
	background: linear-gradient(90deg, rgba(40,52,78,1) 0%, rgba(40,52,78,1) 45%, rgba(89,52,59,1) 55%, rgba(89,52,59,1) 100%);
}

div.row .role {
	position: absolute;
	top: calc(50% - 32px);
	left: calc(50% - 32px);
	width: 64px;
	height: 64px;
	background-image: url("assets/icons/svgs/role/role-TOP.svg");
	background-position: center;
	background-size: 100% 100%;
	background-repeat: no-repeat;
}

ul {
/*	font-family: Roboto Medium;*/
	gap: 8px;
	z-index: 1;
}

li { line-height: 1.5em; }
li.tall { line-height: 2em; }

span.icon {
	display: inline-block;
	height: 2em;
	width: 2em;
	background-repeat: no-repeat;
	background-position: top 0 left 0;
	background-size: cover;
	vertical-align: top;
}

span.icon.rank { margin-right: 4px; }

/*li > span.dull { font-family: Roboto; }*/

li > .winrate-bar {
	width: 10em;
	height: 8px;
	background-color: rgba(0, 0, 0, 0.35);
}

ul.summoner {
	height: 100%;
	gap: 4px;
	width: 192px;
	white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 14px;
    background: linear-gradient( 90deg,
        rgba(0,0,0,0.6) 50%,
        rgba(0,0,0,0) 100%
    );
}

/*li.break { color: #a8a8a8; }*/

li > a { color: #C8C8C8; }
/*li > a > span.dull, li.break { font-family: Roboto; }*/

ul.summoner li.h-container { gap: 8px; }
ul.summoner li.h-container img {
	width: 32px;
	border-radius: 4px;
}

div.dd-center, div.dd-centwo {
    width: 256px;
    height: 100%;
/*    background-position: bottom 80% right 80%;*/
    background-position: bottom 80% right 50%;
    background-size: 160% auto;
    -webkit-mask-image: linear-gradient( 90deg,
        rgba(0,0,0,1) 0%,
        rgba(0,0,0,1) 75%,
        rgba(0,0,0,0) 100%
    );

    background-blend-mode: luminosity;
    filter: brightness(100%) grayscale(25%) contrast(100%);
    background-color: rgba(83, 131, 232, 0.3);
}

div.dd-centwo {
/*	transform: scaleX(-1);*/
	position: absolute;
    top: 0;
    right: 0;
    background-repeat: no-repeat;
    background-color: rgba(232, 64, 87, 0.3);
    -webkit-mask-image: linear-gradient( 90deg,
        rgba(0,0,0,0) 0%,
        rgba(0,0,0,1) 25%,
        rgba(0,0,0,1) 100%
    );
}



div.row .roons {
	height: 100%;
	width: 126px;
	background-image: url("assets/icons/roons.png");
	background-position: center;
	background-size: contain;
	background-repeat: no-repeat;
}

div.prev-match {
	position: absolute;
	top: calc(100% + 8px);
	left: 4px;
}

.prev-match .frame.win { border: 1px solid var(--win-blue100); }
.prev-match .frame.loss { border: 1px solid var(--loss-red100); }

.frame > svg {
	position: absolute;
	bottom: 0;
	left: 50%;
	width: 12px;
	transform: translate(-50%, 50%);
}

</style>

</head>






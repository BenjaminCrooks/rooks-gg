<colgroup>
    <col width="auto">
    <col width="auto">
    <col width="128px">
    <col width="auto">
</colgroup>

<thead><tr class="title"><th colspan="100%"><h3>Champions</h3></th></tr></thead>

<tbody>
<% champions.forEach(function(element, index) { %>
<tr>
    <td><img src="<%= element.champion.img.squarecrop %>"></td>
    
    <td><ul class="center">
        <li class="strong<% if (element.kda >= 6) { %> legendary<% } else if (element.kda >= 4) { %> epic<% } else if (element.kda <= 1) { %> boosted<% } %>"><%= element.kda %>:1</li>
        <li><%= element.kills %> / <%= element.deaths %> / <%= element.assists %></li>
    </ul></td>

    <td><div class="winrate-bar">
        <% if (element.wins !== 0) { %>
        <div style="width:<%= element.winrate %>%;"><%= element.wins %>W</div>
        <% }; if (element.losses !== 0) { %>
        <span><%= element.losses %>L</span>
        <% } %>
    </div></td>

    <td><ul class="right">
        <li class="strong<% if (element.winrate >= 70) { %> legendary<% } else if (element.winrate >= 60) { %> epic<% } else if (element.winrate >= 55) { %> rare<% } else if (element.winrate <= 40) { %> boosted<% } %>"><%= element.winrate %>%</li>
        <li><%= element.matches %> Played</li>
    </ul></td>
</tr> 
<% }) %>
</tbody>